	"authors": [
		"BogTheMudWing"
	],
	"contact": {
		"homepage": "https://blog.macver.org/about-me",
		"sources": "https://github.com/BogTheMudWing/Blip"
	},
	"license": "MIT",
	"icon": "assets/blip/icon.png",
	"environment": "client",
	"entrypoints": {
		"main": [
			"org.macver.blip.Blip"
		],
